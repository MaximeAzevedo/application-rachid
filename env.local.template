# --- Configuration Supabase ---
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# --- Configuration Twilio pour l'envoi de SMS ---
# Récupérez ces informations depuis https://console.twilio.com/

# Account SID (commence par "AC...")
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Auth Token (gardez-le secret !)
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Numéro de téléphone Twilio au format international
# Exemple pour France : +33612345678
TWILIO_PHONE_NUMBER=+33xxxxxxxxx 